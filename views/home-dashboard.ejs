<%- include('include/header') %>
  <div class="container py-md-5 container--narrow">
    <%-include('include/flash.ejs')%>
    <% if (!posts.length) { %>
      <div class="text-center">
        <h2>Hello <strong>
            <%= user.username %>
          </strong>, your feed is empty.</h2>
        <p class="lead text-muted">Your feed displays the latest posts from the people you follow. If you don&rsquo;t
          have
          any friends to follow that&rsquo;s okay; you can use the &ldquo;Search&rdquo; feature in the top menu bar to
          find content written by people with similar interests and then follow them.
        </p>
      </div>

    <% } else {
      posts.forEach((post)=>{ %>
        <div class="postcon">
          <a href="/profile<%= post.username %>" class="colourless-link">
            <div class="avatar">
              <img class="avatar-small avv" src="<%= post.avatar %>">
              <span class="username"> <%= post.username %> </span>
            </div>
          </a>
          <a href="/<%= post.avatar %>" class="colourless-link">
            <div class="title">
              <h3> <%= post.title %> </h3>
            </div>
            <div class="excerpt">
              <p> <%= post.slice(0, 30) %> ...
              </p>
              <span class="date"> <%= post.date.toLocaleString()%> </span>
          </a>
        </div>
        </div>
      <%})
    } %>
  </div>
  <%- include('include/footer') %>