<%- include('include/header.ejs') %>
  <div class="container py-md-5 container--narrow">
    <%-include('include/flash.ejs')%>
    <a href="/post/<%=post._id%>" class="small font-weight bold">&laquo; Back to Post permalink</a>

    <form class="mt-3" action="/post/<%=post._id%>/edit" method="POST">
      <div class="form-group">
        <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
        <input required name="title" id="post-title" class="form-control form-control-lg form-control-title" type="text"
          value="<%=post.title%>" placeholder="" autocomplete="off">
      </div>

      <div class="form-group">
        <label for="post-body" class="text-muted mb-1"><small>Body Content</small></label>
        <textarea required name="body" id="post-body" class="body-content tall-textarea form-control"
          type="text"><%=post.body%></textarea>
      </div>

      <button class="btn btn-primary">Save Updates</button>
    </form>
  </div>
  <%- include('include/footer.ejs') %>